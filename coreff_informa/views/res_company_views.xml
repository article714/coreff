<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="informa_captive_form" 
        model="ir.ui.view">
        <field name="name">informa.captive.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" 
            ref="base.view_company_form" />
        <field name="arch" 
            type="xml">
            <xpath expr="//notebook" 
                position="inside">
                <field name="informa_visibility" 
                    invisible="1" />
                <page string="Informa" 
                    attrs="{'invisible': [('informa_visibility', '=', False)]}">
                    <group>
                        <group colspan="2">
                            <field name="informa_use_parent_company" 
                                attrs="{'invisible': [('parent_id', '=', False)]}" />
                        </group>
                        <group attrs="{'invisible': [('informa_use_parent_company', '=', True)]}">
                            <field name="informa_url" />
                            <field name="informa_username" />
                            <field name="informa_password" 
                                password="True" />
                        </group>
                        <group attrs="{'invisible': [('informa_use_parent_company', '=', False)]}">
                            <field name="informa_parent_url" />
                            <field name="informa_parent_username" />
                            <field name="informa_parent_password" 
                                password="True" />
                        </group>
                        <group>
                            <field name="informa_country_code" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>