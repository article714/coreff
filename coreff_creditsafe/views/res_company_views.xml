<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="creditsafe_captive_form"
        model="ir.ui.view">
        <field name="name">creditsafe.captive.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id"
            ref="base.view_company_form" />
        <field name="arch"
            type="xml">
            <xpath expr="//notebook"
                position="inside">
                <field name="creditsafe_visibility"
                    invisible="1" />
                <field name="parent_id"
                    invisible="1" />
                <page string="Creditsafe"
                    attrs="{'invisible': [('creditsafe_visibility', '=', False)]}">
                    <group>
                        <group colspan="2">
                            <field name="creditsafe_use_parent_company"
                                attrs="{'invisible': [('parent_id', '=', False)]}" />
                        </group>
                        <group attrs="{'invisible': [('creditsafe_use_parent_company', '=', True)]}">
                            <field name="creditsafe_url" />
                            <field name="creditsafe_username" />
                            <field name="creditsafe_password"
                                password="True" />
                        </group>
                        <group attrs="{'invisible': [('creditsafe_use_parent_company', '=', False)]}">
                            <field name="creditsafe_parent_url" />
                            <field name="creditsafe_parent_username" />
                            <field name="creditsafe_parent_password"
                                password="True" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
